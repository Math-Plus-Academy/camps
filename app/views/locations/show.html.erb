<div class="container">
  <p>
    <b>Name:</b>
    <%= @location.name %>
  </p>

  <p>
    <b>Address 1:</b>
    <%= @location.address_1 %>
  </p>

  <p>
    <b>Address 2:</b>
    <%= @location.address_2 %>
  </p>

  <p>
    <b>City:</b>
    <%= @location.city %>
  </p>

  <p>
