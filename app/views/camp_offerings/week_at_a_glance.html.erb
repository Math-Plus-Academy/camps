<style type='text/css' media='print'>
  body{
    padding-top: 0;
  }

  table{
    font-family: 'Courier New', Courier, 'Lucida Sans Typewriter', 'Lucida Typewriter', monospace;
    font-size: 11px;
    font-style: normal;
    font-variant: normal;
    font-weight: 400;
    line-height: 18.5714302062988px;
  }

  p{
    font-family: 'Courier New', Courier, 'Lucida Sans Typewriter', 'Lucida Typewriter', monospace;
    font-size: 13px;
    font-style: normal;
    font-variant: normal;
    font-weight: 400;
    line-height: 18.5714302062988px;
  }

  @media all {
    .page-break { display: none; }
  }

  .page-break {
    display: block; page-break-before: always;
  }

  @page {
    size: landscape;
    margin: .5in 1in .5in 1in;
  }
</style>

<% @camp_offerings.each do |co| %>
  <p style='margin:0;'>Week <%= @week %> in <%= @location.name %></p>
  <h4><%= co.name %></h4>
  <table class='table table-striped table-bordered table-condensed'>
    <thead>
      <tr>
        <th></th>
        <th>Student</th>
        <th>Parent/Gaurdian</th>
        <th>Phone</th>
        <th>Emergency Information</th>
        <th>M</th>
        <th>T</th>
        <th>W</th>
        <th>Th.</th>
        <th>F</th>
      </tr>
    </thead>
    <tbody>
      <% co.registrations.where(year: CampOffering::CURRENT_YEAR).to_a.each_with_index do |reg, i| %>
      <tr>
        <td><%= i + 1 %></td>
        <td><%= reg.student_name %></td>
        <td><%= reg.parent_name %></td>
        <td><%= reg.parent_phone %></td>
        <td>
          <%= reg.emergency_contact_name %> <br>
          <%= reg.emergency_contact_phone %>
        </td>
        <td width='10%'></td>
        <td width='10%'></td>
        <td width='10%'></td>
        <td width='10%'></td>
        <td width='10%'></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class='page-break'></div>
<% end %>
