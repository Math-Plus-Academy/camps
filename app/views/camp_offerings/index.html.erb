<div class="container">
    <h1>Listing Camp Offerings</h1>

    <table class="table table-bordered table-hover">
      <tr>
        <th>ID</th>
        <th>Camp</th>
        <th>Teacher</th>
        <th>Assistant</th>
        <th>Start date</th>
        <th>End date</th>
        <th>Location</th>
        <th>Open Spots</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

    <% @camp_offerings.each do |camp_offering| %>
      <tr>
        <td><%= camp_offering.id %></td>
        <td><%= camp_offering.name %></td>
        <td><%= camp_offering.teacher %></td>
        <td><%= camp_offering.assistant %></td>
        <td><%= camp_offering.start_date %></td>
        <td><%= camp_offering.end_date %></td>
        <td><%= camp_offering.location.name %></td>
        <td><%= camp_offering.open_spots %></td>
        <td><%= link_to 'Show', camp_offering %></td>
        <td><%= link_to 'Edit', edit_camp_offering_path(camp_offering) %></td>
        <td><%= link_to 'Destroy', camp_offering, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </table>

    <br />

    <%= link_to 'New Camp offering', new_camp_offering_path %>
</div>