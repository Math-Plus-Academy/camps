<!-- signUpModal -->
<div class="row">
  <div class="col-sm-12">
    <div class="modal fade" id="signUpModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h3 class="modal-title" id="myModalLabel" style="color:black">How Can We Help You?</h3>
          </div>
          <div class="modal-body">
            <h4 style="color:black">Have questions about which camp(s) are best for your child?<h4>
            <h4>Call us at 614-792-6284 </h4>
            <hr>
            <h4 style="color:black">Didn't find a camp that fits your schedule?</h4>
            <p>If so, join over 2000 parents on our email list and get updates when we add camps to our schedule.</p>
            <form accept-charset="UTF-8" action="https://jmrmath.infusionsoft.com/app/form/process/3e93836302b43a68f3e0d36b400fd1d4" class="infusion-form" method="POST">
                <fieldset>
                  <input name="inf_form_xid" type="hidden" value="3e93836302b43a68f3e0d36b400fd1d4" />
                  <input name="inf_form_name" type="hidden" value="Sign up for newsletter" />
                  <input name="infusionsoft_version" type="hidden" value="1.29.9.21" />
                  <div class="form-group">
                      <!-- <label for="inf_field_FirstName">First Name *</label> -->
                      <input class="form-control" id="inf_field_FirstName" name="inf_field_FirstName" type="text" placeholder="First Name" />
                  </div>
                  <div class="form-group">
                      <!-- <label for="inf_field_Email">Email *</label> -->
                      <input class="form-control" id="inf_field_Email" name="inf_field_Email" type="text"  placeholder="Email"/>
                  </div>
                  <div class="infusion-submit">
                      <input type="submit" value="Submit" class="btn btn-primary btn-success" />
                  </div>
                </fieldset>
            </form>
            <hr>
            <h4 style="color:black">Want to see how Math Plus Academy stacks up?</h4>
              <br />
              <%= render '/pages/compare_button' %>
            </div><!-- .modal-body -->
          </div><!-- /.modal-content -->
       </div><!-- /.modal-dialog -->
     </div><!-- /.modal -->
    </div>
  </div>
</div>
