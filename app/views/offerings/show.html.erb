<div class='container'>
  <div class"row">
    <div class="col-lg-6 col-mg-6 col-sm-6 col-xs-12">
        <p>
          <strong>Camp:</strong>
          <%= @offering.id %>: <%= @offering.name %>
        </p>

        <p>
          <strong>Hidden:</strong>
          <%= @offering.hidden %>
        </p>

        <p>
          <strong>Teacher:</strong>
          <%= @offering.teacher %>
        </p>

        <p>
          <strong>Assistant:</strong>
          <%= @offering.assistant %>
        </p>

        <p>
          <strong>Start date:</strong>
          <%= @offering.start_date %>
        </p>

        <p>
          <strong>End date:</strong>
          <%= @offering.end_date %>
        </p>

        <p>
          <strong>Location:</strong>
          <%= @offering.location.name if @offering.location %>
        </p>

        <p>
          <strong>Camp Roster</strong>
          <ul>
          <% @offering.registrations.each do |registration| %>
            <li><%= link_to "#{registration.student_first_name} #{registration.student_last_name}", registration, target: '_blank' %></li>
          <% end %>
          </ul>
        </p>

        <%= link_to 'Edit', edit_offering_path(@offering) %> |
        <%= link_to 'Back', offerings_path %></div>
    </div>
  </div>
</div>
