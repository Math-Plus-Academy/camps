<div class="container">
  <h1>Coupon Codes</h1>

  <table class="table table-striped">
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Description</th>
      <th>Amount</th>
      <th>Active</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @coupon_codes.each do |coupon_code| %>
    <tr>
      <td><%= coupon_code.name %></td>
      <td><%= CouponCode::DISCOUNT_TYPE[coupon_code.coupon_type.to_i] %></td>
      <td><%= coupon_code.description %></td>
      <td><%= coupon_code.amount %></td>
      <td><%= coupon_code.active %></td>
      <td><%= link_to 'Show', coupon_code %></td>
      <td><%= link_to 'Edit', edit_coupon_code_path(coupon_code) %></td>
      <td><%= link_to 'Destroy', coupon_code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to 'New Coupon code', new_coupon_code_path, class: "btn btn-lg btn-success" %>
</div>