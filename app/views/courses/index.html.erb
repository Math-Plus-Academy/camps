<div class="container">
  <h1>All Courses</h1>

  <p>
    Download:
    <%= link_to "CSV", courses_path(format: "csv") %>
  </p>

  <table class="datatable display no-wrap table table-striped" width="100%">
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Price</th>
        <th>Capacity</th>
        <th>Age</th>
        <th>Online</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= course.id %></td>
          <td><%= course.title %></td>
          <td>$<%= course.price if course.price %></td>
          <td><%= course.capacity %></td>
          <td><%= course.age %></td>
          <td><%= course.online %></td>
          <td><%= link_to 'Show', course %></td>
          <td><%= link_to 'Edit', edit_course_path(course) %></td>
          <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p>

  </p>
  <div class="row mt-5">
    <div class="col-md-5">
      <div class="card">
        <div class="card-block">
          <h3 class="card-title">Import courses</h3>
          <%= form_tag import_courses_path, multipart: true do %>
            <%= file_field_tag :file %><br />
            <%= submit_tag "Import", class: 'btn btn-sm btn-white mt-4' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <br />

  <br />

  <%= link_to 'New course', new_course_path, class:"btn btn-lg btn-green" %>
</div>
