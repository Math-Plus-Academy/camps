  <% if @registration %>
    <p>
      <%= link_to 'Register Another Student', new_registration_path(
          parent_first_name: @registration.parent_first_name,
          parent_last_name: @registration.parent_last_name,
          parent_address_1: @registration.parent_address_1,
          parent_city: @registration.parent_city,
          parent_state: @registration.parent_state,
          parent_zip: @registration.parent_zip,
          parent_email: @registration.parent_email,
          parent_phone: @registration.parent_phone,
          emergency_contact_name: @registration.emergency_contact_name,
          emergency_contact_phone: @registration.emergency_contact_phone,
          location: @registration.location_id
          ),
          class: 'btn btn-lg btn-info', id: "register_another_student" %>
    </p>
    <p>
      You will be required to reenter your payment information, but almost everything else will be there :)
    </p>
  <% end %>
  <hr>
  <div class="row text-center">
    <%= render 'pages/jumpstart' %>
  </div>
  <hr style="margin-top:50px;">
  <div class="row mt centered">
    <h1>Register For More</h1>
    <%= render 'pages/registration_buttons' %>
  </div>
  <hr>
  <h2>Do you follow us on Facebook?</h2>
  <p>We post fun stuff, information about our programs, and ways to save on Math Plus Programs.</p>
  <p>
    <div class="fb-follow" data-href="https://www.facebook.com/mathplusacademy" data-colorscheme="light" data-layout="standard" data-show-faces="true"></div>
  </p>
</div>

<% if Rails.env.production? %>
  <div id="facebook_pixel_tracking" data-amount="<%= '%.2f'%(@registration.total/100) %>">
  </div>
  <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-19803817-1']);
      _gaq.push(['_addTrans', <%= @registration.id %>, 'Math Plus Academy', "" + (<%= @registration.total %>)/100 + ".00" , '0.00', '0', 'Powell', 'Ohio', 'USA']);
      _gaq.push(['_trackTrans']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
  </script>
<% end %>
