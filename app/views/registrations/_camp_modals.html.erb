<% Camp.find((1..19).to_a).each do |camp| %>
  <!-- confirmationModal -->
  <div class="modal fade" id="camp<%= camp.id %>Modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-times"></i></button>
          <h2 class="modal-title" id="myModalLabel"><%= camp.title %></h2>
        </div>
        <div class="modal-body">
          <% if camp.video_url %>
            <div class="row" style="margin-bottom:20px;">
              <div class="col-sm-6 col-sm-offset-3">
                <div class="embed-responsive embed-responsive-16by9">
                  <iframe src="<%= camp.video_url %>?color=c9ff23&title=0&byline=0&portrait=0" width="640" height="360" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
                </div>
              </div>
            </div>
          <% end %>
          <%= camp.description.html_safe %>
          <%# unless camp.id == 20 %>
            <!-- <p>
              <h4>Offerings of this camp:</h4>
              <ul>
              <%# camp.camp_offerings.order(:start_date).where( year: 1 ).each do |co| %>
                <li><%# co.confirmation_name %></li>
              <%# end %>
              </ul>
            </p> -->
          <%# end %>
          <hr>
          <h3>View Schedules</h3>
          <%= render '/pages/registration_buttons' %>
        </div><!-- .modal-body -->
        <div class="modal-footer">
          <hr>
          <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
<% end %>
