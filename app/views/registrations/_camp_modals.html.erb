<% Camp.all.each do |camp| %>
  <!-- confirmationModal -->
  <div class="modal fade" id="camp<%= camp.id %>Modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="myModalLabel"><%= camp.title %></h4>
        </div>
        <div class="modal-body">
          <p style="color:red;">
            <em><%= camp.description.html_safe %></em>
          </p>
          <%= unless camp.is == 20 %>
            <p>
              <h4>Offerings of this camp:</h4>
              <ul>
              <% camp.camp_offerings.where( year: 1 ).each do |co| %>
                <li><%= co.confirmation_name %></li>
              <% end %>
              </ul>
            </p>
          <% end %>
            <h3>Register now!</h3>
            <%= render '/pages/registration_buttons' %>
        </div><!-- .modal-body -->
        <div class="modal-footer">
          <hr>
          <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
<% end %>