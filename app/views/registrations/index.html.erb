<div class="container">
<h1>Listing registrations</h1>

<table class="table table-bordered table-hover datatable">
  <thead>
      <tr>
        <th data-class="expand">Parent First name</th>
        <th>Parent Last name</th>
        <th data-hide="phone, tablet">Parent email</th>
        <th data-hide="phone, tablet">Parent phone</th>
        <th data-hide="phone">Student first name</th>
        <th data-hide="phone, tablet">Student last name</th>
        <th data-hide="phone, tablet">Student grade</th>
        <th data-hide="phone, tablet"></th>
        <th data-hide="phone, tablet"></th>
        <th data-hide="phone, tablet"></th>
      </tr>
  </thead>
    <tbody>
        <% @registrations.each do |registration| %>
          <tr>
            <td><%= registration.parent_first_name %></td>
            <td><%= registration.parent_last_name %></td>
            <td><%= registration.parent_email %></td>
            <td><%= registration.parent_phone %></td>
            <td><%= registration.student_first_name %></td>
            <td><%= registration.student_last_name %></td>
            <td><%= registration.student_grade %></td>
            <td><%= link_to 'Show', registration %></td>
            <td><%= link_to 'Edit', edit_registration_path(registration) %></td>
            <td><%= link_to 'Destroy', registration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
    </tbody>
</table>

<br />

<%= link_to 'New Registration', new_registration_path %>
</div>