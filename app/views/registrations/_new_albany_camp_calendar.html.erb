<h2>New Albany Camp Schedule</h2>
<h3><b>Click each camp's name for more information.</b></h3>
<div class="form-group check_boxes optional registration_camp_offerings">
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Dates</th>
      <th>Time</th>
      <th>Classroom 1</th>
      <th>Classroom 2</th>
      <th>Classroom 3</th>
    </tr>
  </thead>
  <tbody>

    <% 8.times do |n| %>
      <tr>
        <td rowspan=2 style="vertical-align:middle;"><%= CampOffering::OFFERING_WEEKS[n+1][:start].strftime("%b %d") %></td>
        <td>AM (9:00 - 12:00)</td>
        <!-- classroom 1 -->
        <% CampOffering.by_week(2, n+1).each do |co| %>
          <% if co.time == "AM" && co.classroom == 1 %>
          <td>
            <label class="checkbox">
              <%= check_box_tag "registration[camp_offering_ids][]", co.id, false, id: "registration_camp_offering_ids_#{co.id}", class: "check_boxes optional", data: { price: "#{co.camp.price}", name: "#{co.confirmation_name}"} %> <%= co.name %> <span style='color:green;' class="pull-right">$<%= co.price %></span>
            </label>
          </td>
          <% elsif co.time == "All Day" && co.classroom == 1 %>
          <td rowspan=2 style="vertical-align:middle;">
            <label class="checkbox">
              <%= check_box_tag "registration[camp_offering_ids][]", co.id, false, id: "registration_camp_offering_ids_#{co.id}", class: "check_boxes optional", data: { price: "#{co.camp.price}", name: "#{co.confirmation_name}"} %> <%= co.name %> <span style='color:green;' class="pull-right">$<%= co.price %></span>
            </label>
          </td>
          <% end %>
        <% end %>
        <!-- classroom 2 -->
        <% CampOffering.by_week(2, n+1).each do |co| %>
          <% if co.time == "AM" && co.classroom == 2 %>
          <td>
            <label class="checkbox">
              <%= check_box_tag "registration[camp_offering_ids][]", co.id, false, id: "registration_camp_offering_ids_#{co.id}", class: "check_boxes optional", data: { price: "#{co.camp.price}", name: "#{co.confirmation_name}"} %> <%= co.name %> <span style='color:green;' class="pull-right">$<%= co.price %></span>
            </label>
          </td>
          <% elsif co.time == "All Day" && co.classroom == 2 %>
          <td rowspan=2 style="vertical-align:middle;">
            <label class="checkbox">
              <%= check_box_tag "registration[camp_offering_ids][]", co.id, false, id: "registration_camp_offering_ids_#{co.id}", class: "check_boxes optional", data: { price: "#{co.camp.price}", name: "#{co.confirmation_name}"} %> <%= co.name %> <span style='color:green;' class="pull-right">$<%= co.price %></span>
            </label>
          </td>
          <% end %>
        <% end %>
        <!-- classroom 3 -->
        <% CampOffering.by_week(2, n+1).each do |co| %>
          <% if co.time == "AM" && co.classroom == 3 %>
          <td>
            <label class="checkbox">
              <%= check_box_tag "registration[camp_offering_ids][]", co.id, false, id: "registration_camp_offering_ids_#{co.id}", class: "check_boxes optional", data: { price: "#{co.camp.price}", name: "#{co.confirmation_name}"} %> <%= co.name %> <span style='color:green;' class="pull-right">$<%= co.price %></span>
            </label>
          </td>
          <% elsif co.time == "All Day" && co.classroom == 3 %>
          <td rowspan=2 style="vertical-align:middle;">
            <label class="checkbox">
              <%= check_box_tag "registration[camp_offering_ids][]", co.id, false, id: "registration_camp_offering_ids_#{co.id}", class: "check_boxes optional", data: { price: "#{co.camp.price}", name: "#{co.confirmation_name}"} %> <%= co.name %> <span style='color:green;' class="pull-right">$<%= co.price %></span>
            </label>
          </td>
          <% end %>
        <% end %>
      </tr>
      <tr>
        <td>PM (12:30 - 3:30)</td>
        <!-- classroom 1 -->
        <% pm_camp = false %>
        <% CampOffering.by_week(2, n+1).each do |co| %>
            <% if co.time == "PM" && co.classroom == 1 %>
              <% pm_camp = true %>
              <td>
                <label class="checkbox">
                  <%= check_box_tag "registration[camp_offering_ids][]", co.id, false, id: "registration_camp_offering_ids_#{co.id}", class: "check_boxes optional", data: { price: "#{co.camp.price}", name: "#{co.confirmation_name}"} %> <%= co.name %> <span style='color:green;' class="pull-right">$<%= co.price %></span>
                </label>
              </td>
            <% elsif co.time == "All Day" && co.classroom == 1 %>
              <% pm_camp = true %>
            <% end %>
        <% end %>
        <% if !pm_camp %>
          <td></td>
        <% end %>
        <!-- classroom 2 -->
        <% pm_camp = false %>
        <% CampOffering.by_week(2, n+1).each do |co| %>
            <% if co.time == "PM" && co.classroom == 2 %>
              <% pm_camp = true %>
              <td>
                <label class="checkbox">
                  <%= check_box_tag "registration[camp_offering_ids][]", co.id, false, id: "registration_camp_offering_ids_#{co.id}", class: "check_boxes optional", data: { price: "#{co.camp.price}", name: "#{co.confirmation_name}"} %> <%= co.name %> <span style='color:green;' class="pull-right">$<%= co.price %></span>
                </label>
              </td>
            <% elsif co.time == "All Day" && co.classroom == 2 %>
              <% pm_camp = true %>
            <% end %>
        <% end %>
        <% if !pm_camp %>
          <td></td>
        <% end %>
        <!-- classroom 3 -->
        <% pm_camp = false %>
        <% CampOffering.by_week(2, n+1).each do |co| %>
            <% if co.time == "PM" && co.classroom == 3 %>
              <% pm_camp = true %>
              <td>
                <label class="checkbox">
                  <%= check_box_tag "registration[camp_offering_ids][]", co.id, false, id: "registration_camp_offering_ids_#{co.id}", class: "check_boxes optional", data: { price: "#{co.camp.price}", name: "#{co.confirmation_name}"} %> <%= co.name %> <span style='color:green;' class="pull-right">$<%= co.price %></span>
                </label>
              </td>
            <% elsif co.time == "All Day" && co.classroom == 3 %>
              <% pm_camp = true %>
            <% end %>
        <% end %>
        <% if !pm_camp %>
          <td></td>
        <% end %>
      </tr>
    <% end %>
    <input name="registration[camp_offering_ids][]" type="hidden" value="">

  </tbody>
</table>
</div>