<div class="container">
  <div class"row">
    <div class="col-lg-6 col-mg-6 col-sm-6 col-xs-12">
      <p><%= link_to "Print Invoice", registration_path(@registration, :format => 'pdf'), :target => "_blank" %></p>
      <p>
        <b>Parent first name:</b>
        <%= @registration.parent_first_name %>
      </p>

      <p>
        <b>Parent last name:</b>
        <%= @registration.parent_last_name %>
      </p>

      <p>
        <b>Parent address 1:</b>
        <%= @registration.parent_address_1 %>
      </p>

      <p>
        <b>Parent address 2:</b>
        <%= @registration.parent_address_2 %>
      </p>

      <p>
        <b>Parent email:</b>
        <%= @registration.parent_email %>
      </p>

      <p>
        <b>Parent phone:</b>
        <%= @registration.parent_phone %>
      </p>

      <p>
        <b>Student first name:</b>
        <%= @registration.student_first_name %>
      </p>

      <p>
        <b>Student last name:</b>
        <%= @registration.student_last_name %>
      </p>

      <p>
        <b>Student grade:</b>
        <%= @registration.student_grade %>
      </p>

      <p>
        <b>Student allergies:</b>
        <%= @registration.student_allergies %>
      </p>

      <p>
        <b>Emergency contact name:</b>
        <%= @registration.emergency_contact_name %>
      </p>

      <p>
        <b>Emergency contact phone:</b>
        <%= @registration.emergency_contact_phone %>
      </p>

      <%= link_to 'Edit', edit_registration_path(@registration) %> |
      <%= link_to 'Back', registrations_path %>
    </div>
    <div class="col-lg-6 col-mg-6 col-sm-6 col-xs-12">
      <p>
        <b>Regsitered Camps:</b>
        <% @registration.camp_offerings.each do |offering| %>
          <%= offering.name %>
        <% end %>
      </p>
      <p>
        <b>Total:</b>
        <%= @registration.total %>
      </p>
    </div>
  </div>
</div>