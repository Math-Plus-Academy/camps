<h1>Listing camps</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Capacity</th>
    <th>Age</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @camps.each do |camp| %>
  <tr>
    <td><%= camp.title %></td>
    <td><%= camp.description %></td>
    <td><%= camp.capacity %></td>
    <td><%= camp.age %></td>
    <td><%= link_to 'Show', camp %></td>
    <td><%= link_to 'Edit', edit_camp_path(camp) %></td>
    <td><%= link_to 'Destroy', camp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

