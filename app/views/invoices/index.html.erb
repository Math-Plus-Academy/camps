<h1>Listing invoices</h1>

<table>
  <thead>
    <tr>
      <th>Registration</th>
      <th>Paid</th>
      <th>Payment date</th>
      <th>Stripe charge</th>
      <th>Stripe customer</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.registration_id %></td>
        <td><%= invoice.paid %></td>
        <td><%= invoice.payment_date %></td>
        <td><%= invoice.stripe_charge_id %></td>
        <td><%= invoice.stripe_customer_id %></td>
        <td><%= invoice.amount %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

